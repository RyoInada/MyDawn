        {
          "value": "default",
          "label": "Next to media"
        },
        {
          "value": "full",
          "label": "Below media"
        }
      ]
    },
    {
      "type": "product",
      "id": "gift_product",
      "label": "Product"
    },
    {
      "type": "checkbox",
      "id": "social_enable",
      "label": "Enable social sharing",
      "default": true
    },
    {
      "type": "header",
      "content": "Media"
